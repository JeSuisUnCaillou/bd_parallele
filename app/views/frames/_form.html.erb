<%= form_for(@frame, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @frame.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@frame.errors.count, "error") %> prohibited this frame from being saved:</h4>

      <ul>
      <% @frame.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <%= f.label :ecomic_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :ecomic_id, options_for_select(Ecomic.all.pluck(:name, :id)), {}, { class: "form-control" } %>
    </div>

    <%= f.label :parent_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :parent_id, options_for_select(Frame.all.pluck(:name, :id)), {}, { class: "form-control" } %>
    </div>

  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
